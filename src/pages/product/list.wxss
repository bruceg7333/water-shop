/* 浮动购物车按钮样式 */
.floating-cart-btn {
  position: fixed;
  bottom: 30rpx;
  right: 30rpx;
  display: flex;
  align-items: center;
  background-color: #0088cc;
  color: #fff;
  padding: 20rpx 30rpx;
  border-radius: 50rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 136, 204, 0.3);
  z-index: 1000;
  transition: all 0.3s ease;
}

.floating-cart-btn:active {
  transform: scale(0.95);
}

.cart-icon-wrapper {
  position: relative;
  margin-right: 16rpx;
}

.cart-icon {
  width: 40rpx;
  height: 40rpx;
}

.cart-badge {
  position: absolute;
  top: -10rpx;
  right: -10rpx;
  background-color: #ff4d4f;
  color: #fff;
  font-size: 20rpx;
  padding: 4rpx 8rpx;
  border-radius: 20rpx;
  min-width: 32rpx;
  text-align: center;
  line-height: 1;
}

.cart-text {
  font-size: 28rpx;
  font-weight: 500;
}

