  <!-- Main container -->
<view class="home__collection__container">
  <!-- Tab menu -->
  <view class="home__collection__tab-bar">
    <view 
      class="home__collection__tab-item {{currentTab == 0 ? 'home__collection__tab-active' : ''}}"
      bindtap="switchTab" data-index="0"
    >
      花间旋律
    </view>
    <view 
      class="home__collection__tab-item {{currentTab == 1 ? 'home__collection__tab-active' : ''}}"
      bindtap="switchTab" data-index="1"
    >
      绝密档案
    </view>
    <view 
      class="home__collection__tab-item {{currentTab == 2 ? 'home__collection__tab-active' : ''}}"
      bindtap="switchTab" data-index="2"
    >
      音汇时空
    </view>
  </view>

  <!-- Product display area -->
  <view class="home__collection__product-area">
    <!-- Featured product -->
    <view class="home__collection__featured-product">
      <image 
        src="/images/miku_plush.png" 
        mode="aspectFit" 
        class="home__collection__product-image"
      ></image>
      
      <view class="home__collection__product-info">
        <text class="home__collection__product-title">初音未来-花间旋律系列周边</text>
        <text class="home__collection__product-price">¥10</text>
      </view>
    </view>

    <!-- Product decorations -->
    <image 
      src="/images/miku_standee.png" 
      mode="aspectFit" 
      class="home__collection__standee"
    ></image>
    <view class="home__collection__badge">
      <image src="/images/miku_badge.png" mode="aspectFit"></image>
    </view>
  </view>
</view>

  <!-- 热门产品 -->
  <view class="product-section">
    <view class="section-header">
      <view class="section-title">{{ '人氣爆款'}}</view>
      <view class="section-more" bindtap="viewAllProducts">{{i18n.viewAll || '查看全部'}}</view>
    </view>
    
    <!-- 加载状态 -->
    <view class="loading-container" wx:if="{{loading}}">
      <view class="loading-spinner"></view>
      <text class="loading-text">{{i18n.loading || '加载中...'}}</text>
    </view>
    
    <!-- 错误提示 -->
    <view class="error-container" wx:elif="{{error}}" bindtap="fetchProducts">
      <icon type="warn" size="36" color="#FF6B6B"></icon>
      <text class="error-text">{{error}}</text>
      <text class="retry-text">{{i18n.retry || '点击重试'}}</text>
    </view>
    
    <!-- 空状态提示 -->
    <view class="empty-container" wx:elif="{{productList.length === 0}}">
      <image class="empty-image" src="/assets/images/icons/empty.png" mode="aspectFit"></image>
      <text class="empty-text">{{i18n.empty || '暂无商品数据'}}</text>
    </view>
    
    <!-- 商品列表 -->
    <view class="product-list" wx:else>
      <view class="product-item" wx:for="{{productList}}" wx:key="id" bindtap="onProductTap" data-id="{{item.id}}">
        <view class="product-tag {{item.tag === i18n.tagHot ? 'hot' : (item.tag === i18n.tagNew ? 'new' : 'discount')}}" wx:if="{{item.tag}}">{{item.tag}}</view>
        <image class="product-image" src="{{item.imageUrl}}" mode="aspectFill" />
        <view class="product-info">
          <text class="product-name">{{item.name}}</text>
          <text class="product-desc">{{item.description}}</text>
          <view class="product-meta">
            <view class="product-price-row">
              <text class="product-price">{{i18n.currencySymbol}}{{item.price}}</text>
              <text class="product-original-price" wx:if="{{item.originalPrice && item.originalPrice > item.price}}">{{i18n.currencySymbol}}{{item.originalPrice}}</text>
            </view>
            <view class="product-sales-buy">
              <text class="product-sales">{{i18n.soldFormat ? i18n.soldFormat.replace('{count}', item.sales) : '已售' + item.sales + '件'}}</text>
              <view class="buy-btn" catchtap="onBuyNow" data-id="{{item.id}}">{{i18n.buy || '购买'}}</view>
            </view>
          </view>
        </view>
      </view>
    </view>
  </view>


