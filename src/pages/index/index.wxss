/**index.wxss**/
@import "../../common/common.wxss";
.container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: 30rpx;
}

/* 搜索框 */
.search-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 15rpx 30rpx;
  background-color: #fff;
}

.search-input-wrap {
  flex: 1;
  position: relative;
  background-color: #f5f5f5;
  border-radius: 30rpx;
  padding: 10rpx 20rpx;
}

.search-input {
  height: 100%;
  background-color: transparent;
  padding: 0 30rpx 0 70rpx;
  font-size: 28rpx;
}

.search-icon {
  position: absolute;
  left: 20rpx;
  top: 50%;
  transform: translateY(-50%);
}

.lang-switch {
  display: flex;
  align-items: center;
  margin-left: 20rpx;
  padding: 10rpx 16rpx;
  background-color: #f5f5f5;
  border-radius: 30rpx;
  cursor: pointer;
  transition: all 0.2s;
  border: none;
  position: relative;
}

.lang-switch:active {
  background-color: #e9e9e9;
}

.lang-code {
  font-size: 26rpx;
  color: #333;
  margin-right: 8rpx;
  max-width: 120rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.lang-arrow {
  width: 0;
  height: 0;
  border-left: 6rpx solid transparent;
  border-right: 6rpx solid transparent;
  border-top: 8rpx solid #666;
  margin-left: 6rpx;
  transition: transform 0.2s;
}

.language-menu.show .lang-arrow {
  transform: rotate(180deg);
}

/* 轮播图 */
.banner-swiper {
  width: 100%;
  height: 400rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.banner-item {
  position: relative;
  width: 100%;
  height: 100%;
  overflow: hidden;
  border-radius: 0 0 20rpx 20rpx;
}

.banner-image {
  width: 100%;
  height: 100%;
  transition: transform 0.3s;
}

.banner-item:active .banner-image {
  transform: scale(1.05);
}

.banner-text {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 40rpx 30rpx 30rpx;
  background: linear-gradient(to top, rgba(0,0,0,0.7), transparent);
  color: #fff;
}

.banner-title {
  font-size: 40rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
  text-shadow: 0 2rpx 4rpx rgba(0,0,0,0.5);
}

.banner-subtitle {
  font-size: 28rpx;
  opacity: 0.9;
}

/* 取餐方式 */
.take-way-section {
  margin: 20rpx 30rpx;
  padding: 30rpx;
  background-color: #fff;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.section-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 20rpx;
  position: relative;
}

.section-title::after {
  content: "";
  position: absolute;
  left: 0;
  bottom: -10rpx;
  width: 40rpx;
  height: 4rpx;
  background: linear-gradient(to right, #0088cc, #56CCF2);
  border-radius: 2rpx;
}

/* 特殊处理品牌故事区域的标题，不显示蓝色横线 */
.brand-title.section-title::after {
  display: none;
}

.section-more {
  color: #0088cc;
  font-size: 26rpx;
}

.take-way-options {
  display: flex;
  justify-content: space-around;
}

.take-way-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx;
  width: 180rpx;
  border-radius: 8rpx;
  background-color: #f9f9f9;
}

.take-way-icon {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 10rpx;
}

.take-way-name {
  font-size: 28rpx;
  color: #333;
}

/* 加载状态 */
.loading-container, .error-container, .empty-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60rpx 0;
  min-height: 300rpx;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 6rpx solid #f3f3f3;
  border-top: 6rpx solid #0088cc;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text, .error-text, .empty-text {
  font-size: 28rpx;
  color: #999;
  margin-top: 20rpx;
}

.retry-text {
  font-size: 24rpx;
  color: #0088cc;
  margin-top: 10rpx;
  text-decoration: underline;
}

.empty-image {
  width: 160rpx;
  height: 160rpx;
  margin-bottom: 20rpx;
  opacity: 0.6;
}

/* 产品列表 */
.product-section, .article-section {
  margin: 30rpx 40rpx;
  padding: 30rpx;
  border-radius: 16rpx;
  background-color: #fff;
  box-shadow: 0 10rpx 30rpx -5rpx rgba(0, 136, 204, 0.1);
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.product-list, .article-list {
  display: flex;
  flex-direction: column;
  gap: 30rpx;
}

.product-item, .article-item {
  display: flex;
  background-color: #fff;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.03);
  position: relative;
  transition: all 0.3s;
}

.product-item:active, .article-item:active {
  transform: translateY(2rpx);
  box-shadow: 0 1rpx 3rpx rgba(0, 0, 0, 0.03);
}

.product-image, .article-image {
  width: 200rpx;
  height: 200rpx;
  flex-shrink: 0;
}

.product-info, .article-info {
  flex: 1;
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.product-name, .article-title {
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 10rpx;
}

.product-desc, .article-title {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 10rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.product-meta, .article-views {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.product-price-row {
  display: flex;
  align-items: baseline;
  margin-bottom: 6rpx;
}

.product-price {
  font-size: 32rpx;
  color: #ff6b00;
  font-weight: 600;
}

.product-original-price {
  font-size: 26rpx;
  color: #999;
  text-decoration: line-through;
  margin-left: 16rpx;
}

.product-sales-buy {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 4rpx;
}

.product-sales {
  font-size: 24rpx;
  color: #999;
}

/* 文章区域样式修复 */
.article-views {
  font-size: 24rpx;
  color: #999;
  display: flex;
  align-items: flex-end;
}

/* 商品标签 */
.product-tag, .article-tag {
  position: absolute;
  top: 16rpx;
  left: 0;
  padding: 6rpx 16rpx;
  font-size: 22rpx;
  color: white;
  background-image: linear-gradient(to right, #ff6b81, #ff4757);
  border-radius: 0 20rpx 20rpx 0;
  z-index: 2;
  box-shadow: 2rpx 2rpx 10rpx rgba(0,0,0,0.1);
}

.product-tag.discount, .article-tag.discount {
  background-image: linear-gradient(to right, #ff9f43, #ff6b6b);
}

.product-tag.hot, .article-tag.hot {
  background-image: linear-gradient(to right, #ff4757, #ff6b81);
}

.product-tag.new, .article-tag.new {
  background-image: linear-gradient(to right, #1a78c2, #56CCF2);
}

/* 购买按钮样式 */
.buy-btn, .article-btn {
  background-color: #0088cc;
  color: white;
  padding: 6rpx 20rpx;
  border-radius: 30rpx;
  font-size: 24rpx;
  display: inline-block;
  box-shadow: 0 4rpx 8rpx rgba(0, 136, 204, 0.2);
}

.buy-btn:active, .article-btn:active {
  transform: scale(0.95);
  background-color: #0077b3;
}

/* 导航区域样式 */
.nav-section {
  padding: 40rpx 20rpx;
  background-color: #fff;
  margin: 30rpx 40rpx 20rpx;
  border-radius: 20rpx;
  position: relative;
  box-shadow: 0 10rpx 30rpx -5rpx rgba(0, 136, 204, 0.1);
  z-index: 1;
}

.nav-sec-title {
  width: 100%;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  padding: 0 20rpx 10rpx;
}

.nav__list {
  display: flex;
  flex-wrap: nowrap;
  overflow-x: scroll;
  justify-content: space-around;
}
.nav-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.nav-icon {
  width: 100rpx;
  height: 100rpx;
  border-radius: 20rpx;
  color: #fff;
  font-size: 40rpx;
  transition: transform 0.3s;
  position: relative;
  overflow: hidden;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 6rpx 12rpx rgba(0, 136, 204, 0.2);
}

.nav-item-icon {
  width: 100%;
  height: 100%;
}

.nav-icon:active {
  transform: scale(0.95);
}

.nav-text {
  font-size: 24rpx;
  color: #333;
}

/* 品牌故事样式 */
.brand-story {
  margin: 30rpx 40rpx;
  padding: 30rpx;
  border-radius: 16rpx;
  background-color: #fff;
  box-shadow: 0 10rpx 30rpx -5rpx rgba(0, 136, 204, 0.1);
  position: relative;
  overflow: hidden;
}

.brand-story::before {
  content: "";
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 6rpx;
  background-image: linear-gradient(to right, #1a78c2, #56CCF2);
}

.brand-story::after {
  content: "";
  position: absolute;
  right: -40rpx;
  top: -40rpx;
  width: 200rpx;
  height: 200rpx;
  background-image: radial-gradient(circle, rgba(0, 136, 204, 0.05) 0%, rgba(0, 136, 204, 0.02) 70%);
  border-radius: 50%;
  z-index: 0;
}

.brand-title {
  margin-bottom: 20rpx;
  position: relative;
  z-index: 1;
}

.brand-content {
  position: relative;
  z-index: 1;
}

.brand-desc {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
  margin-bottom: 20rpx;
  display: block;
}

.brand-tags {
  display: flex;
  flex-wrap: wrap;
  margin-top: 16rpx;
}

.brand-tag {
  padding: 6rpx 20rpx;
  background: linear-gradient(135deg, #f0f9ff, #e1f5fe);
  color: #0088cc;
  border-radius: 30rpx;
  font-size: 24rpx;
  margin-right: 16rpx;
  margin-bottom: 16rpx;
  box-shadow: 0 2rpx 6rpx rgba(0, 136, 204, 0.1);
}

/* 限时优惠横幅 */
.promo-banner {
  margin: 30rpx 40rpx;
  padding: 30rpx;
  border-radius: 16rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  color: white;
  position: relative;
  overflow: hidden;
  box-shadow: 0 10rpx 30rpx -5rpx rgba(0, 136, 204, 0.2);
}

.promo-banner::before {
  content: "";
  position: absolute;
  top: -100rpx;
  right: -100rpx;
  width: 200rpx;
  height: 200rpx;
  background-color: rgba(255, 255, 255, 0.1);
  border-radius: 50%;
}

.promo-banner::after {
  content: "";
  position: absolute;
  bottom: -80rpx;
  left: -80rpx;
  width: 160rpx;
  height: 160rpx;
  background-color: rgba(255, 255, 255, 0.08);
  border-radius: 50%;
}

.promo-content {
  z-index: 1;
}

.promo-title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
  text-shadow: 0 2rpx 4rpx rgba(0,0,0,0.1);
}

.promo-desc {
  font-size: 28rpx;
  opacity: 0.9;
}

.promo-btn {
  padding: 16rpx 30rpx;
  background-color: rgba(255, 255, 255, 0.2);
  border-radius: 30rpx;
  font-size: 28rpx;
  font-weight: 500;
  z-index: 1;
  border: 2rpx solid rgba(255, 255, 255, 0.3);
  box-shadow: 0 4rpx 10rpx rgba(0,0,0,0.1);
  transition: all 0.3s;
}

.promo-btn:active {
  transform: scale(0.95);
  background-color: rgba(255, 255, 255, 0.25);
}

/* 文章区域样式 */
.article-section {
  margin: 20rpx 30rpx;
  padding: 20rpx;
  background-color: #fff;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.article-list {
  display: flex;
  flex-direction: column;
}

.article-item {
  position: relative;
  display: flex;
  margin-bottom: 30rpx;
  padding-bottom: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.article-item:last-child {
  margin-bottom: 0;
  padding-bottom: 0;
  border-bottom: none;
}

.article-tag {
  position: absolute;
  top: 0;
  left: 0;
  background-color: rgba(0, 136, 204, 0.9);
  color: #fff;
  font-size: 20rpx;
  padding: 6rpx 12rpx;
  border-radius: 6rpx 0 6rpx 0;
  z-index: 2;
}

.article-image {
  width: 200rpx;
  height: 150rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.article-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.article-title {
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
  line-height: 1.4;
  margin-bottom: 16rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.article-meta {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 10rpx;
  margin-bottom: 10rpx;
  border-top: 1rpx dashed #f0f0f0;
  padding-top: 10rpx;
}

.article-date-row {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  margin: 10rpx 0;
  padding: 6rpx 0;
  color: #666;
  border-bottom: 1rpx dashed #eee;
  padding-bottom: 10rpx;
}

.article-date-label {
  color: #999;
  margin-right: 10rpx;
}

.article-date-value {
  color: #0088cc;
  font-weight: 500;
}

.article-stats {
  display: flex;
  justify-content: flex-end;
  align-items: center;
  margin-top: auto;
  padding-top: 10rpx;
}

.article-stat-item {
  font-size: 24rpx;
  color: #999;
  margin-left: 20rpx;
}

.article-stat-item:first-child {
  margin-left: 0;
}

.article-tags {
  display: flex;
  flex-wrap: wrap;
  margin: 10rpx 0;
}

.tag-item {
  font-size: 22rpx;
  color: #0088cc;
  background-color: #f0f9ff;
  padding: 4rpx 10rpx;
  border-radius: 4rpx;
  margin-right: 10rpx;
  margin-bottom: 6rpx;
  display: inline-block;
  border: 1rpx solid #e1f5fe;
}

/* 语言菜单 */
.language-menu {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
  display: none;
}

.language-menu.show {
  display: block;
}

.language-menu-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.4);
}

.language-menu-content {
  position: absolute;
  top: 100rpx;
  right: 30rpx;
  width: 300rpx;
  background-color: #fff;
  border-radius: 12rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.2);
  overflow: hidden;
}

/* 添加小三角形指示器 */
.language-menu-content::before {
  content: '';
  position: absolute;
  top: -10rpx;
  right: 35rpx;
  width: 0;
  height: 0;
  border-left: 10rpx solid transparent;
  border-right: 10rpx solid transparent;
  border-bottom: 10rpx solid #fff;
}

.language-menu-title {
  padding: 20rpx;
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  text-align: center;
  border-bottom: 1rpx solid #f0f0f0;
}

.language-options {
  max-height: 500rpx;
  overflow-y: auto;
}

.language-option {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 20rpx;
  font-size: 26rpx;
  color: #333;
  transition: background-color 0.2s;
  border-bottom: 1rpx solid #f0f0f0;
}

.language-option:last-child {
  border-bottom: none;
}

.language-option:active {
  background-color: #f5f5f5;
}

.language-option.active {
  color: #0088cc;
  font-weight: 500;
}

.check-icon {
  width: 32rpx;
  height: 32rpx;
} 